    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "asRoot": true,
            
            "request": "launch",
            "mode": "auto",
            "program": ".",
            "args": ["serve"]
        },
        {
            "name": "Attach to process",
            "type": "go",
            "debugAdapter": "dlv-dap",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1"
        }
    ]
}
